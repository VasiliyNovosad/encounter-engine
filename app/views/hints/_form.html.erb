<%= tinymce language: 'uk' %>
<div class="form-group row">
  <%= f.label "Команда", class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-10">
    <%= f.select(:team_id, teams, {}, { class: 'form-control' }) %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :text, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-10">
    <%= f.text_area :text, class: 'tinymce' %>
  </div>
</div>
<div class="form-group row">
  <%= f.label "Через", class: 'col-sm-2 col-form-label' %>
  <div id="hint-delay-form" class="col-sm-10 form-inline">
    <%= render 'shared/time_form' %>
    <%= f.hidden_field :delay%>
  </div>
</div>

<script type="text/javascript">
    $( document ).ready(function() {
        set_time_form(parseInt($('#hint_delay').val()), '#hint-delay-form');

        $('#hint-delay-form .time-hours').on('change', function() {
            set_field_time('#hint_delay', '#hint-delay-form', 1);
        });

        $('#hint-delay-form .time-minutes').on('change', function() {
            set_field_time('#hint_delay', '#hint-delay-form', 1);
        });

        $('#hint-delay-form .time-seconds').on('change', function() {
            set_field_time('#hint_delay', '#hint-delay-form', 1);
        });
    });
</script>

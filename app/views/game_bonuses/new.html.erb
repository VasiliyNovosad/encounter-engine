<p>
  Новий бонус/штраф до гри "<%= link_to @game.name, game_path(@game) %>"
</p>

<br>

<%= form_for @game_bonus, url: game_game_bonuses_path(@game) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'form', f: f %>
  <%= f.submit "Додати бонус/штраф", class: 'btn btn-light' %>
<% end %>
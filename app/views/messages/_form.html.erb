<div class="form-group row">
  <%= f.label :text, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-10">
    <%= f.text_field :text, class: 'form-control' %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-12 col-form-label">Доступно на рівнях:</div>
  <div class="col-sm-12">
    <%#= hidden_field_tag("message[level_ids][]", nil) %>
    <% game.levels.each do |level| %>
      <label class="checkbox-inline level-checkbox"><%= check_box_tag("message[level_ids][]", level.id, level.id.in?(message.levels.collect(&:id))) %> <%= level.position %></label>
    <% end %>
  </div>
</div>
<h2>
  Завдання "<strong><%= link_to @level.name, game_level_path(@game, @level) %></strong>"
</h2>

<p>
  <em>(гра "<%= link_to @game.name, game_path(@game) %>")</em>
</p>

<br>

<%= form_for @question, url: game_level_question_path(@game, @level, @question) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'form', f: f %>
    <%= f.submit "Змінити", class: 'btn btn-light' %>
    <em><%= link_to "(відмінити)", game_level_path(@game, @level, anchor: "question-#{@question.id}") %></em>
<% end %>
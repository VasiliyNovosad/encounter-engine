<br>
<div class="nested-fields">
  <div>
    <%= link_to_remove_association 'Видалити відповідь', f, class: 'btn btn-outline-danger btn-sm' %>
  </div>
  <div class="form-group row">
    <%= f.label "Команда", class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.select(:team_id, [['Для всіх', nil]] + @teams.map{ |team| [team.name, team.id] }, {}, { class: 'form-control' }) %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label "Відповідь", class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :value, class: 'form-control' %>
    </div>
  </div>
</div>
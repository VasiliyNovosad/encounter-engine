<h2><%= "#{t('.edit_caption')} #{resource_name.to_s.humanize}" %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group row">
    <%= f.label :nickname, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nickname, autofocus: true, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :phone_number, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :phone_number, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control form-control-sm" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= "#{t('.waiting_confirmation')} #{resource.unconfirmed_email}" %></div>
  <% end %>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-sm" %>
    </div>
    <small id="passwordHelp" class="form-text text-muted offset-sm-3">
      (<%= t('.blank_password') %>)
    </small>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-sm" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :current_password, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control form-control-sm" %>
    </div>
    <small id="passwordHelp" class="form-text text-muted offset-sm-3">
      (<%= t('.current_password') %>)
    </small>
  </div>

  <div class="actions">
    <%= f.submit t('.update'), class: 'btn btn-light' %>
  </div>
<% end %>

<%= link_to t('.back'), :back %>

<h2><%= "#{t('.edit_caption')} #{resource_name.to_s.humanize}" %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= "#{t('.waiting_confirmation')} #{resource.unconfirmed_email}" %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('.blank_password') %>)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('.current_password') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update') %>
  </div>
<% end %>

<h3><%= t('.delete_account_caption') %></h3>

<p><%= button_to t('.delete_account'), registration_path(resource_name), data: { confirm: t('.delete_confirmation') }, method: :delete %></p>

<%= link_to t('.back'), :back %>

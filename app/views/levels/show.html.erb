<fieldset id="tasks-block">
  <legend class="openedlevel">
    Завдання:
  </legend>
  <% unless @game.author_finished? %>
    <p>
      <%= link_to "Додати завдання", new_game_level_task_path(@game, @level) %>
    </p>
    <br>
  <% end %>
  <p>
    <%= render 'tasks/list', tasks: @level.tasks, game: @game, level: @level %>
  </p>
</fieldset>
<br>
<fieldset id="messages-block">
  <legend class="purple">
    Повідомлення:
  </legend>
  <% unless @game.author_finished? %>
    <p>
      <%= link_to "Додати повідомлення", new_game_level_message_path(@game, @level) %>
    </p>
    <br>
  <% end %>
  <p>
    <%= render 'messages/list', messages: @level.messages, game: @game, level: @level %>
  </p>
</fieldset>
<br>
<fieldset id="hints-block">
  <legend class="hint-timer">
    Пiдказки:
  </legend>
  <% unless @game.author_finished? %>
    <p>
      <%= link_to "Додати підказку", new_game_level_hint_path(@game, @level) %>
    </p>
    <br>
  <% end %>
  <p>
    <%= render 'hints/list', hints: @level.hints, game: @game, level: @level %>
  </p>
</fieldset>
<br>
<fieldset id="penalty-hints-block">
  <legend class="yellow">
    Штрафні пiдказки:
  </legend>
  <% unless @game.author_finished? %>
    <p>
      <%= link_to "Додати штрафну підказку", new_game_level_penalty_hint_path(@game, @level) %>
    </p>
    <br>
  <% end %>
  <p>
    <%= render 'penalty_hints/list', penalty_hints: @level.penalty_hints.order(:created_at), game: @game, level: @level %>
  </p>
</fieldset>
<br>
<fieldset id="sectors-block">
  <legend class="right_code">
    Відповіді:
  </legend>
  <% unless @game.author_finished? %>
    <p>
      <%= link_to "Додати сектор", new_game_level_question_path(@game, @level), class: 'btn btn-sm btn-success' %>
      <%= link_to "Додати групу секторів", { controller: 'questions', action: 'new_batch', game_id: @game.id, level_id: @level.id }, class: 'btn btn-sm btn-success' %>
    </p>
    <% if @level.questions.exists? %>
      <%= form_tag({controller: :levels, action: :add_answer_to_sectors}, method: "post") do %>
        <br>Додати відповідь
        <%= text_field_tag(:answer) %>
        у всі сектори <%= submit_tag "  +  ", class: 'btn btn-sm btn-success' %>
        <br>
      <% end %>
      <br>
    <% end %>
  <% end %>
  <p>
    <%= render 'questions/list', questions: @level.questions, game: @game, level: @level %>
  </p>
  <% if !@game.author_finished? && @level.questions.count > 5 %>
    <p>
      <%= link_to "Додати сектор", new_game_level_question_path(@game, @level) %>
    </p>
  <% end %>
</fieldset>
<br>
<fieldset id="bonuses-block">
  <legend class="bonus">
    Бонуси:
  </legend>
  <% unless @game.author_finished? %>
    <p>
      <%= link_to "Додати бонус", new_game_level_bonus_path(@game, @level) %>
    </p>
    <% if @level.bonuses.exists? %>
      <%= form_tag({controller: :levels, action: :add_answer_to_bonuses}, method: "post") do %>
        <br>Додати відповідь
        <%= text_field_tag(:bonus_answer) %>
        у всі бонуси <%= submit_tag "  +  ", class: 'btn btn-sm btn-primary' %>
        <br>
      <% end %>
      <br>
    <% end %>
  <% end %>
  <p>
    <%= render 'bonuses/list', bonuses: @level.bonuses, game: @game, level: @level %>
  </p>
  <% if !@game.author_finished? && @level.bonuses.count > 5 %>
    <br>
    <p>
      <%= link_to "Додати бонус", new_game_level_bonus_path(@game, @level) %>
    </p>
  <% end %>
</fieldset>
<br>
<p><a href="#tasks-block"><span class="openedlevel">Завдання</span></a>,
  <a href="#messages-block"><span class="purple">повідомлення</span></a>,
  <a href="#hints-block"><span class="hint-timer">підказки</span></a>,
  <a href="#penalty-hints-block"><span class="yellow">штрафні підказки</span></a>,
  <a href="#sectors-block"><span class="right_code">відповіді</span></a>,
  <a href="#bonuses-block"><span class="bonus">бонуси</span></a></p>
<br>
<br>
<p>
  <%= link_to "Повернутися до гри \"#{@level.game.name}\"", game_path(@level.game) %>
</p>
<br>
<% unless @game.author_finished? %>
  <br>
  <br>
  <br>
  <br>
  <p>
    <%= link_to "Видалити даний рівень", game_level_path(@game, @level), method: :delete, data: { confirm: 'Ви впевнені?' } %> <br>
  </p>
<% end %>


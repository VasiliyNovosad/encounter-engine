<h2>Новий рівень для гри <%= @level.game.name %></h2>
<br>

<%= form_for @level, url: game_levels_path(@level.game) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'form', f: f, questions_count: @level.questions.size %>
  <%= f.submit "Додати рівень", class: 'btn btn-light' %>
  <em><%= link_to "(відмінити)", game_path(@level.game) %></em>
<% end %>



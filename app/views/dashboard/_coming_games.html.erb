<fieldset id="coming">
  <legend>
    Майбутні ігри (<%= Game.notstarted.count  %>)
  </legend>
  <% Game.notstarted.each do |game | %>
    Відбудеться гра <b><%= link_to game.name, game_path(game) %></b> |
    <% if game.created_by?(current_user) %>
      <b>Ви автор гри</b>
    <% else %>
      <% if current_user.captain? %>
        <% @game_entry = GameEntry.of(@team,game)%>
        <%= render 'shared/game_entry_controls', game_entry: @game_entry,  game: game, team: @team %>
      <% end %>
      <%= link_to "Увійти!", game_path(game) %>
    <% end %>
    <br>
  <% end %>
</fieldset>

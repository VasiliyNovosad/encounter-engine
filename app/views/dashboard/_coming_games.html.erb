<% coming_games = Game.order(:starts_at).notstarted %>

<% if coming_games.count > 0 %>
  <% nearest_game = coming_games.first %>
  <fieldset id="nearest">
    <legend>
      Найближча гра
    </legend>
    <%= render 'shared/nearest_game', game: nearest_game %>
  </fieldset>
  <br>

  <% coming_games = coming_games[1..-1] %>
  <% if coming_games.count > 0 %>
    <fieldset id="coming">
      <legend>
        Майбутні ігри
      </legend>
      <% coming_games.each do |game | %>
        <%= link_to game.name, game_path(game), class: "coming-game" %>
          <%=  " (#{(game.is_testing? ? game.test_date : game.starts_at).strftime('%H:%M %d.%m.%Y')}) " %>
        <% if current_user %>
          <% if game.created_by?(current_user) %>
            | <b>Ви автор гри</b>
          <% else %>
            <% if current_user.captain? %>
              | <% game_entry = GameEntry.of(current_user.team, game)%>
              <%= render 'shared/game_entry_controls', game_entry: game_entry,  game: game, team: current_user.team %>
            <% end %>
          <% end %>
        <% end %>
        <br>
        <br>
      <% end %>
    </fieldset>
  <% end %>
<% end %>
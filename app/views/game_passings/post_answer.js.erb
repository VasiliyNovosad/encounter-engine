var entered_code = $('#entered-code');
var answer = $('#answer');
<% if answer_was_correct? %>
  entered_code.html('Код <span class="right_code"><%= @answer %></span> вірний.<br><hr>');
  answer.val('');
  answer.blur();
  answer.focus();
<% else %>
  entered_code.html('Код <span class="wrong_code"><%= @answer %></span> невірний.<br><hr>');
  answer.blur();
  answer.focus();
  answer.select();
<% end %>
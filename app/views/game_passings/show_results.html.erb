Гра "<%= link_to @game.name, game_path(@game) %>"

<% if @game.game_type == 'linear' || @game.game_type == 'selected' %>
  <table id="results" border="1">
    <thead>
      <tr>
        <th>Місце</th>
        <th>Команда</th>
        <th>Час старту</th>
        <th>Час фінішу</th>
        <th>Сума бонусів</th>
        <th>Час гри</th>
      </tr>
    </thead>
    <tbody>
      <% game_passings = GamePassing.of_game(@game) %>
      <% game_passings.finished.each_with_index do |game_passing, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= game_passing.team.name %></td>
          <td><%= @game.starts_at.strftime('%H:%M:%S') + ' ' + @game.starts_at.strftime('(%d.%m)') %></td>
          <td>
            <% if game_passing.exited? %>
              <b>Зійшли з дистанції</b>(<%= game_passing.finished_at.strftime('%H:%M:%S.%L') %><%= ' ' + game_passing.finished_at.strftime('(%d.%m)') if game_passing.finished_at.day != @game.starts_at.day %>)
            <% else %>
              <%= game_passing.finished_at.strftime('%H:%M:%S.%L') %> <%= game_passing.finished_at.strftime('(%d.%m)') if game_passing.finished_at.day != @game.starts_at.day %>
            <% end %>
          </td>
          <td><%= seconds_to_string(game_passing.sum_bonuses || 0) %></td>
          <td><%= Time.at(game_passing.finished_at - @game.starts_at - game_passing.sum_bonuses).utc.strftime("%H:%M:%S.%L") %> </td>
        </tr>
      <% end %>
      <% (game_passings.ended_by_author - game_passings.finished).each do |game_passing| %>
          <tr>
            <td>#</td>
            <td><%= game_passing.team.name %></td>
            <td><%= @game.starts_at.strftime('%H:%M:%S') + ' ' + @game.starts_at.strftime('(%d.%m)') %></td>
            <td>
              Не фінішували
            </td>
            <td><%= seconds_to_string(game_passing.sum_bonuses || 0) %></td>
            <td>-</td>
          </tr>
        <% end %>
    </tbody>
  </table>
<% else %>
  <table id="results">
    <thead>
      <tr>
        <th>Місце</th>
        <th>Команда</th>
        <th>Час фінішу</th>
        <th>Пройдено рівнів</th>
        <th>Сума бонусів</th>
        <th>Час гри</th>
      </tr>
    </thead>
    <tbody>
      <% game_passings = GamePassing.of_game(@game) %>
      <% place = 1 %>
      <% game_passings.finished.each do |game_passing| %>
        <tr>
          <td><%= place %></td>
          <%= place += 1 %>
          <td><%= game_passing.team.name %></td>
          <td>
            <% if game_passing.exited? %>
              <b>Зійшли з дистанції</b>(<%= game_passing.finished_at.strftime('%H:%M:%S.%L') %><%= ' ' + game_passing.finished_at.strftime('(%d.%m)') if game_passing.finished_at.day != @game.starts_at.day %>)
            <% else %>
              <%= game_passing.finished_at.strftime('%H:%M:%S.%L') %> <%= game_passing.finished_at.strftime('(%d.%m)') if game_passing.finished_at.day != @game.starts_at.day %>
            <% end %>
          </td>
          <td><%= game_passing.closed_levels.count %></td>
          <td><%= seconds_to_string(game_passing.sum_bonuses || 0) %></td>
          <td><%= Time.at(game_passing.finished_at - game_passing.sum_bonuses).utc.strftime("%H:%M:%S.%L") %> </td>
        </tr>
      <% end %>
      <% (game_passings - game_passings.finished).sort { |a, b| (b.closed_levels.count <=> a.closed_levels.count).nonzero? || (a.current_level_entered_at - a.sum_bonuses <=> b.current_level_entered_at - b.sum_bonuses) }.each do |game_passing| %>
          <tr>
            <td><%= place %></td>
            <%= place += 1 %>
            <td><%= game_passing.team.name %></td>
            <td>
              <%= game_passing.current_level_entered_at.strftime('%H:%M:%S.%L') %> <%= game_passing.current_level_entered_at.strftime('(%d.%m)') if game_passing.current_level_entered_at.day != @game.starts_at.day %>
            </td>
            <td><%= game_passing.closed_levels.count %></td>
            <td><%= seconds_to_string(game_passing.sum_bonuses || 0) %></td>
            <td><%= Time.at(game_passing.current_level_entered_at - game_passing.sum_bonuses).utc.strftime("%H:%M:%S.%L") %> </td>
          </tr>
        <% end %>
    </tbody>
  </table>
<% end %>

<br>

<%= link_to "Лог відповідей", url_for("/logs/full/#{@game.id}") if user_signed_in? %>

<% if @game.is_testing? %>
  <br>
  <%= link_to "Завершити тестування", url_for("/games/finish_test/#{@game.id}") if user_signed_in? && current_user.author_of?(@game) %>
<% end %>
<h1>Повний лог відповідей гри "<%= link_to @game.name, game_path(@game) %>"</h1>

<table id="stats" border="1">
  <tbody>
    <% @levels.each do |level| %>
      <tr align="center">
        <td colspan="<%=@teams.count%>">
          <h2><%= level.name %></h2>
          <% if level.questions.count == 1 %>
            <strong>Вірний код:</strong><%= level.questions.first.correct_answer %>
          <% else %>
            <strong>Вірні коди:</strong>
            <% level.questions.each do |question| %>
              <%= question.correct_answer %><% if question != level.questions.last %>,<% end %>
            <% end %>
          <% end %>
        </td>
      </tr>
      <tr valign="top">
        <% @teams.each do |team| %>
        <td>
          <%= team.name %>
          <% team_logs = @logs.of_team(team).of_level(level) %>
          <ul>
          <% team_logs.each do |team_log| %>
            <li><%= team_log.time.strftime("%Y-%m-%d %H:%M:%S.%L") %>&nbsp;<%= "#{team_log.answer} (#{team_log.user.nickname})" %></li>
          <% end %>
          </ul>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

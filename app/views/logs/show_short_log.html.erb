<h1>Статистика гри</h1>

<table id="stats" border="1">
  <tbody>
  <% @levels.each do |level| %>
      <tr align="center">
        <td colspan="<%=@teams.count%>">
          <h2><%= level.name %></h2>
        </td>
      </tr>
      <tr valign="top">
        <% @teams.each do |team| %>
            <td>
              <%= team.name %>
              <% team_logs = @logs.of_team(team).of_level(level) %>
              <ul>
                <% team_log = team_logs.count > 0 && GamePassing.of_game(@game).of_team(team).closed_levels.include?(level.id) ? team_logs.last : nil %>
                <li><%= "#{team_log.time.strftime('%Y-%m-%d %H:%M:%S')} (#{team_log.user.nickname})" unless team_log.nil? %></li>
              </ul>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
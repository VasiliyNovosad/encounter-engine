<h1>Статистика гри</h1>

<table id="stats" border="1">
  <tbody>
  <% @levels.each do |level| %>
      <tr align="center">
        <td colspan="<%=@teams.count%>">
          <h2><%= level.name %></h2>
        </td>
      </tr>
      <tr valign="top">
        <% @teams.each do |team| %>
            <td>
              <%= team.name %>
              <% team_logs = Log.of_team(team).of_level(level) %>
              <ul>
                <% team_log = team_logs.last %>
                <li><%= team_log.time.strftime("%Y-%m-%d %H:%M:%S") if team_log %>&nbsp;<%= "(#{team_log.user.nickname})" if team_log %></li>
              </ul>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
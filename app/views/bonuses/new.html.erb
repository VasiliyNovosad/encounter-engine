<h2>
  Завдання "<strong><%= link_to level.name, game_level_path(game, level) %></strong>"
</h2>

<p>
  <em>(гра "<%= link_to game.name, game_path(game) %>")</em>
</p>

<br>

<%= form_for bonus, url: game_level_bonuses_path(game, level) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'form', f: f, teams: teams, game: game, bonus: bonus %>
  <%= f.submit "Додати бонус", class: 'btn btn-light' %>
  <em><%= link_to "(відмінити)", game_level_path(game, level, anchor: "bonuses-block") %></em>
<% end %>
<% if current_user.member_of_any_team? %>
  <% unless Game.started.empty? %>
    <fieldset>
      <legend>
        Поточні ігри домена
      </legend>

      <% (Game.started - Game.finished).each do |game| %>
        <div id="game-<%= game.id %>">
          <% unless game.is_testing? %>
          Розпочалась гра "<%= link_to game.name, game_path(game) %>" |
              <% if current_user.captain? %>
                  <% game_entry = GameEntry.of(current_user.team, game)%>
                  <%= render 'shared/game_entry_controls', game_entry: game_entry,  game: game, team: current_user.team %>
              <% end %>
              <% if current_user.team.finished?(game) || game.created_by?(current_user) %>
                <%= link_to "Переглянути результати", url_for("/game_passings/show_results?game_id=#{game.id}") %>
              <% else %>
                <% if game.levels && game.levels.count > 0 %>
                  <%  game_entry = GameEntry.of(current_user.team, game) %>
                  <%= render 'shared/current_games_status', game_entry: game_entry, game: game %>
                <% else %>
                  Гра не містить завдань
                <% end %>
              <% end %>
           <% end %>
        </div>
        <br>
      <% end %>
    </fieldset>
  <% end %>
<% end %>

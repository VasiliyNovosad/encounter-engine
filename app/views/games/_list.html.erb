<% games.each do |game| %>
  <p>
    <strong><%= link_to "#{game.name} (#{game.starts_at.strftime('%Y-%m-%d %H:%M')})", game_path(game) %></strong>
    <% if user_signed_in? && current_user.author_of?(game) %>
        <em><%= link_to "(редагувати)", edit_game_path(game) %></em>
        <em><%= link_to "(статистика)", url_for("/logs/short/#{game.id}") if game.started? %></em>
        <em><%= link_to "(прямий ефір)", url_for("/logs/livechannel/#{game.id}") if game.started? %></em>
        <em><%= link_to "(лог відповідей)", url_for("/logs/full/#{game.id}") if game.started? %></em>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <em><%= link_to "ЗАВЕРШИТИ ГРУ", url_for("/games/end_game/#{game.id}") if (game.started? && !game.author_finished?) %></em>
        <em><%= "Ви завершили гру" if (game.started? && game.author_finished?) %></em>
    <% else %>
        <em><%= link_to "(cтатистика)", url_for("/logs/short/#{game.id}") if game.started? || game.author_finished? %></em>
        <em><%= link_to "(результати)", url_for("/game_passings/show_results?game_id=#{game.id}") if game.author_finished? %></em>
    <% end %>
  </p>
<% end %>